@model IEnumerable<DAL.EquipmentTypes>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>Equipment List</h2>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.EquipmentName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EquipmentTypeName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RentalDays)
        </th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.EquipmentName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EquipmentTypeName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RentalDays)
            </td>
            <td>
                @Html.ActionLink("Add to Cart", "AddToCart", new { id = item.EquipmentId })
            </td>
        </tr>
    }
    <tr>
        </br>
    </tr>
    <tr>
        <td colspan="4">
            @Html.ActionLink("Print Invoice", "PrintInvoice")
        </td>
    </tr>
</table>
